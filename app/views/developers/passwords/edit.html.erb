<div class="container my-5">
  <div class="row justify-content-md-center">
    <div class="col col-md-7">
      <div class="card">
        <div class="card-body">
          <h2 class="text-center">Change your password</h2>
          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>
          <% if !resource.confirmed? %>
            <div class="alert alert-danger">
              You must confirm your email before you can change your password.
              <br/>
              <%= link_to "Didn't receive the confirmation instructions?", new_confirmation_path(resource_name) %>
            </div>
          <% end %>
          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>
          <%= f.input :password, label: "New password", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation, label: "Confirm your new password", required: true %>
          <div class="text-center">
            <%= f.button :submit, "Change my password", class: "btn btn-application" %><br>
            <%= render "developers/shared/links" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
