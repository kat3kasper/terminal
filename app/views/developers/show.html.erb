<div class="container-fluid company-job-show-container">
  <div class="row">
    <!-- Job details -->

    <div class="col-sm-12 col-md-12 job-details-container">

     <div class="row mx-auto user-introduction justify-content-center pb-4">
      <% if @developer.avatar.attached? %>
      <div class="col-xs-2 col-md-4 avatar-profile centered" style="align-self: center;">
        <%= image_tag @developer.avatar.variant(resize: "300x300^", gravity:"center", extent: "300x300") %>
      </div>
      <% end %>

      <div class="col-xs-9 col-md-8 centered">
        <h5 class="mt-2"><%= @developer.first_name %> <%= @developer.last_name %></h5>

        <% if @developer.github_url? %>
        <a href="<%= @developer.github_url %>" target="_blank">
          <i class="fab fa-github fa-2x" style="color: #24292e; text-decoration: none; margin-right: 1vh; margin-left: 1vh;"></i></a>
          <% end %>

          <% if @developer.linkedin_url? %>
          <a href="<%= @developer.linkedin_url %>" target="_blank">
            <i class="fab fa-linkedin fa-2x" style="color: #0073b1; text-decoration: none; margin-right: 1vh; margin-left: 1vh;"></i></a>
            <% end %>


            <h6 class="pt-3">Current location: <br /></h6>
            <p><%= @developer.city %>, <%= @developer.country %></p>
          </div>
        </div>

        <div class="centered">
          <p><b>Search for</b>
            <% if @developer.remote == ["remote"] %>
            : Remote opportunities
            <% elsif @developer.remote == ["office"] %>
            : Office opportunities
            <% elsif @developer.remote == ["remote", "office"]%>
            : Office & Remote opportunities
            <% end %></p>
            <% if @developer.mobility %>
            <p>Mobility: <%= @developer.mobility %></p>
            <% else %>
            <h6>Full mobility</h6>
            <% end %>
          </div>

          <div class="centered">
            <% if @developer.resumes.attached? %>
            <% @developer.resumes.each do |resume| %>
            <%= link_to "Resume", rails_blob_path(resume, disposition: "attachment"), class: "btn btn-orange btn-application-small", style: "padding-top: 6px" %>
            <% end %>
            <% end %>
          </div>

          <div class="row centered justify-content-center pt-4 pb-4">
            <div class="col-xs-12 col-sm-12 col-md-12 col-md-12 job-show-skills">
             <div class="job-show-titles">
               <h5 class="h6 row justify-content-center underlined-orange pt-3">Skills</h5>
             </div>

             <div class="row">
              <table class="table">
                <tbody>
                 <% @developer.skills.each do |skill| %>
                 <tr>
                  <td><i class="devicon-<%= skill.name %>-plain colored"></i></td>
                  <td><%= skill.name %></td>
                  <td><%= skill.level %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>

          <div class="row">

            <div class="col-xs-12 col-sm-12 col-md-12 col-md-12 col-lg-12">
              <div class="job-show-titles">
               <h5 class="h6 row justify-content-center underlined-orange pt-3">Need US sponsorship</h5>
             </div>
             <div class="row justify-content-center">
              <p class="centered">
                <% if @developer.need_us_permit == false %>
                <p>No</p>
                <% else %>
                <p>Yes</p>
                <% end %>
              </div>
            </div>
          </div>

        </div>
      </div>



      <div style="display: flex" class="justify-content-center">
        <button class="btn-orange btn-edit-job">Edit</button>
      </div>


    </div>

  </div>

<div class="centered my-5">
  <%= link_to "< Back", dashboard_developers_path(@developer), class: "btn-orange btn-back"  %>
</div>

