<div class="row justify-content-center">
  <div class="col-xs-11 col-sm-11 col-lg-8" style="max-width: 700px;">
    <div class="auth-form">
      <div class="text-center">
        <%= render "recruiters/shared/tab_nav" %>
        <div class="login-form">
          <h4 class="centered mt-5 mb-4">Create your <strong>recruiter</strong> account</h4>
          <p class="mb-4">Are you a <strong>developer</strong>? <%= link_to "Sign up here", new_developer_registration_path %></p>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :email, required: true, autofocus: true, placeholder: 'Email', label: false %>
            <%= f.input :password, placeholder: 'Password', label: false, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
            <%= f.input :password_confirmation, placeholder: 'Password confirmation', label: false, required: true %>
          </div>
          <div class="form-actions">
              <%= f.button :submit, "Sign up", class: 'btn-orange log-in-button' %>
          </div>
          <p class="submit-privacy">By clicking 'Sign up', you agree to our <%= link_to "Privacy Policy", policy_path %></p>
          <% end %>
        </div>
        <div class="login-form-bottom">
          <div>
            <%= render "recruiters/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
