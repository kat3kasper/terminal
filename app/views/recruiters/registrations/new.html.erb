<div class="row justify-content-center">
  <div class="col-xs-11 col-sm-11 col-md-8" style="max-width: 700px;">
    <div class="auth-form">
      <div class="text-center">
        <ul class="nav nav-tabs">
          <li class="nav-item">
            <%= link_to 'Log in', new_recruiter_session_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Join us', new_recruiter_registration_path, class: "nav-link active" %>
          </li>
        </ul>
        <form class="login-form">
          <h4 class="centered mt-5 mb-5">Create your account</h4>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <%= f.input :email, required: true, autofocus: true, placeholder: 'Email', label: false %>
          <%= f.input :password, placeholder: 'Password', label: false, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation, placeholder: 'Password confirmation', label: false, required: true %>

          <div class="form-actions">
            <%= f.button :submit, "Sign up", class: 'btn-orange log-in-button' %>
          </div>
          <% end %>

        </form>
        <div class="login-form-bottom">
          <div>
            <%= render "recruiters/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


