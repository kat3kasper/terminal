<div>
  <h1>Competences</h1>
  <%= link_to 'Add a new competence', new_admin_competence_path %>
</div>
<br />

<table class="table table-striped">
  <thead>
    <tr>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @competences.each do |competence| %>
      <tr>
        <td><%= competence.value %></td>
        <td><%= link_to 'Edit', edit_admin_competence_path(competence) %></td>
        <td><%= link_to 'Destroy', admin_competence_path(competence), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
