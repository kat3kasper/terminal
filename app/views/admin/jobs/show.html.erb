<p>
  <strong>Name:</strong>
  <%= @job.title %>
  <p><b>Company:</b> <%= @job.company_name %></p>

  <p><b>Is a vetted job:</b> <%= @job.vetted %></p>
</p>

  <% if @job.remote == ["remote"] %>
    <b><p>Remote job</p></b>
  <% elsif @job.remote == ["office"] %>
    <b><p>In-office job</p></b>
  <% elsif @job.remote == ["remote", "office"]  %>
    <b><p>Remote or In-office job</p></b>
  <% end %>

<p><b>City:</b> <%= @job.city %></p>
<p><b>Zipcode:</b> <%= @job.zip_code %></p>
<p><b>State:</b> <%= @job.state %></p>
<p><b>Active:</b> <%= @job.active %></p>
<p><b>Employment type:</b> <%= @job.employment_type %></p>
<p><b>Can sponsor:</b> <%= @job.can_sponsor %></p>
<p><b>Created:</b> <%= @job.created_at %></p>


<h5>Skills</h5>
<%= render 'admin/shared/skills_list', skills: @job.skills_array %>

<br/>
<br/>
<%= render 'admin/jobs/matches' %>
<br/>
<p><b>Description:</b> <%= raw @job.description %></p>

<%= link_to 'Edit', edit_admin_job_path(@job) %> |
<%= link_to 'Back', admin_jobs_path %>
