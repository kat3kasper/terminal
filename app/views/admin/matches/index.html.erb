<div>
  <h1>Matches</h1>
</div>

<br/>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Job</th>
      <th>Developer</th>
      <th>Status</th>
      <th>Date Changed</th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= link_to match.job.title, admin_job_path(match.job) %></td>
        <td><%= link_to match.developer.full_name, admin_developer_path(match.developer) %></td>
        <td>
          <%= simple_form_for match, url: admin_match_path(match), action: :update do |f| %>
            <div class="field">
              <%= f.select :status, Match.statuses.keys %>
              <%= f.submit 'Save', class: "btn btn-small" %>
            </div>
          <% end %>
        </td>
        <td><%= match.updated_at.to_date %></td>
      </tr>
    <% end %>
  </tbody>
</table>
