<table class="table table-striped">
  <h4>Matches for <%= @job_title %></h4>
  <thead>
    <tr>
      <th>Developer</th>
      <th>Status</th>
      <th>Date Changed</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.developer.full_name %></td>
        <td>
          <%= simple_form_for match, url: admin_match_path(match), action: :update do |f| %>
            <div class="field">
              <%= f.select :status, Match.statuses.keys %>
              <%= f.submit 'Save', class: "btn btn-small" %>
            </div>
          <% end %>
        </td>
        <td><%= match.updated_at.to_date %></td>
        <td><%= link_to "See developer", admin_developer_path(match.developer) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
