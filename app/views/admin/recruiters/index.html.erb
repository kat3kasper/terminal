<div>
  <h1>recruiters</h1>
  <%= link_to 'Add a new recruiter', new_admin_recruiter_path %>
</div>

<br />

<table class="table table-striped">
  <thead>
    <tr>
      <th>Email</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recruiters.each do |recruiter| %>
      <tr>
        <td><%= recruiter.email %></td>
        <td><%= recruiter.company_name %></td>
        <td><%= link_to 'Edit', edit_admin_recruiter_path(recruiter) %></td>
        <td><%= link_to 'Destroy', admin_recruiter_path(recruiter), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
