<div class="row centered matched-job">

  <% if job.vetted? %>
    <div class="col-xs-12 col-lg-1">
      <button type="button" class="btn vetted-btn" data-toggle="modal" data-target="#vettedModal">
        <%= image_tag "checked.png", class: "icon-resized" %>
        <h5 class="vetted-icon-lbl">VETTED</h5>
      </button>
    </div>
  <% end %>

  <div class="col-xs-12 col-lg-5" style="margin-top: 10px;">
    <h4><%= job.title %></h4>
    <h5 class="text-muted"><%= job.company.name  %></h5>
    <p class="text-muted">
      <%= job.city %>
      <% if job.remote == ["remote"] %>
        - Remote
      <% elsif job.remote == ["office"] %>
      - Office
      <% elsif job.remote == ["remote", "office"]%>
      - Office & Remote
    <% end %>
    </p>
  </div>

  <div class="col-xs-12 col-lg-4 matched-job-skills">
    <h5 class="row matched-job-skills-title">Main skills</h5>
    <%= render "jobs/shared/skills_table", skills: job.skills %>
  </div>

  <div class="col-xs-12 col-lg-2 mt-2 mb-2">
    <%= link_to "Details", new_job_application_path(job), class:"btn-apply"  %>
  </div>
</div>
