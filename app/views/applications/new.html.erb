<div class="container-fluid user-job-show-container">
  <div class="row">
    <!-- Job details -->
    <div class="col-sm-12 col-md-6 job-details-container">

      <%= render 'jobs/full_job' %>

    </div>


    <!-- Application -->
    <div class="col-sm-12 col-md-6 job-application-container">
      <div class="job-show-titles">
       <h4 class="row justify-content-center underlined">Apply to this job</h4>
     </div>

     <% if !@is_posted %>
      <%= simple_form_for([@job, @application]) do |f| %>
        <% if !@developer.resumes.attached? %>
          <%= f.simple_fields_for @developer do |f| %>
            <%= f.input :resumes, as: :file, :input_html => {multiple: true , :data => {"direct-upload-url": "#{root_url}rails/active_storage/direct_uploads" }, accept: "application/pdf" } %>
          <% end  %>
          <%= f.input :message, label: "Write a message to the recruiter" %>
          <% else %>
          <p>We will attach the resume uploaded on your profile with this request.</p>
          <% end  %>
        <hr class="mb-4">
        <%= f.submit 'Send application', class: "btn-orange btn-application", style: "display: block; width: 100%; margin: 0;" %>
      <% end %>
     <% else %>
     <p>Your application has beeing sent to <%= @job.company.name %> to be revied!</p>
     <p>We will keep you posted if they are going to open the applicaitons.</p>
     <% end %>


     <form>
      <div class="form-group pt-4">

        <div class="input-group mb-3">
          <div class="custom-file">
            <input type="file" class="custom-file-input" id="applicationAddResume">
            <label class="custom-file-label" for="applicationAddResume">Upload your resume</label>
          </div>
          <div class="input-group-append">
            <span class="input-group-text" id="">Upload</span>
          </div>
        </div>

        <label for="applicationMessageRecruiter">Write a message to the recruiter</label>
        <textarea class="form-control" id="applicationMessageRecruiter" rows="3" placeholder="" value="" required=""></textarea>
        <hr class="mb-4">
        <button class="btn-orange btn-application" style="display: block; width: 100%; margin: 0;" type="submit">Apply</button>
      </div>
    </form>





  </div>
</div>
<div class="btn-orange btn-back">Back</div>
</div>

<script>
  $('.custom-file-input').on('change', function() {
   let fileName = $(this).val().split('\\').pop().slice(0,22)+"...";
   $(this).next('.custom-file-label').addClass("selected").html(fileName);
 });

  $(function () {
    $('[data-toggle="popover"]').popover()
  })
</script>







